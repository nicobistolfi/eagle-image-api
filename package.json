{
  "name": "image-api",
  "version": "0.9.0",
  "description": "Typescript Image Optimization API using Sharp",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint -c .eslintrc.js --fix src/**/*.ts",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "author": "Nico Bistolfi",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run prebuild"
    }
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-parse-variables": "^2.0.0",
    "express": "^4.18.1",
    "sharp": "^0.30.7",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/dotenv-parse-variables": "^2.0.1",
    "@types/sharp": "^0.30.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.19",
    "husky": "^8.0.0"
  }
}
